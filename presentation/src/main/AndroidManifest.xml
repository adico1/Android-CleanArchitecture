<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tigaomobile.lockinapp.lockscreen.presentation">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:allowBackup="true"
      android:name="com.tigaomobile.lockinapp.lockscreen.presentation.AndroidApplication"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">

    <activity
        android:name="com.tigaomobile.lockinapp.lockscreen.presentation.view.activity.MainActivity"
        android:label="@string/app_name"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:excludeFromRecents="true"
        android:launchMode="singleInstance"
        android:screenOrientation="portrait"
        android:theme="@style/FullscreenTheme"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
        android:name="com.tigaomobile.lockinapp.lockscreen.presentation.view.activity.UserListActivity"
        android:label="@string/activity_title_user_list">
    </activity>

    <activity
        android:name="com.tigaomobile.lockinapp.lockscreen.presentation.view.activity.UserDetailsActivity"
        android:label="@string/activity_title_user_details">
    </activity>
  </application>

</manifest>
